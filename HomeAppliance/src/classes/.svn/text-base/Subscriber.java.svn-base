package classes;

import java.util.Date;

import jade.proto.SubscriptionResponder.Subscription;

/**
 * Класс хранит информацию о подписчике:
 * 	Подписчик
 * 	Путь к файлу подписки
 * 	Дату окончания подписки
 */
public class Subscriber {
	private Subscription sub;
	private String path = new String();
	private Date date; 
	
	/**
	 * Метод возвращает подписчика
	 */
	public Subscription getSub(){
		return this.sub;
	}
	
	/**
	 * Метод возвращает путь к файлу подписки
	 */
	public String getPath(){
		return this.path;
	}
	
	/**
	 * Метод возвращает дату окончания подписки
	 */
	public Date getDate(){
		return this.date;
	}
	
	/**
	 * Конструктор
	 */
	public Subscriber(Subscription sub, String path, Date date){
		if (path != null)
			this.path = path;
		else
			this.path = "";
		this.sub = sub;
		this.date = date;
	}
}
